{
  "name": "typescript-template",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Tim de Jager",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "parcel": "^1.12.4",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "start": "parcel ./src/index.html",
    "build": "yarn run type-check && parcel build ./src/index.html --public-url '/'",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "cli": "ts-node src/cli.ts",
    "format": "prettier --write './src/**/*.{ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && npm run test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      ".+\\.css$": "<rootDir>/src/test-support/assetMock.ts",
      "^[./a-zA-Z0-9$_-]+\\.svg": "<rootDir>/src/test-support/assetMock.ts",
      "^[./a-zA-Z0-9$_-]+\\.png": "<rootDir>/src/test-support/assetMock.ts",
      "^[./a-zA-Z0-9$_-]+\\.mp4": "<rootDir>/src/test-support/assetMock.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0",
    "zustand": "^2.2.3"
  }
}
